@page "{id:int?}"
@model CoronaVirusApp.Pages.Doctor.EditModel
@{
    ViewData["Title"] = "Edit";
}

@if (Model.Doctor.Id == 0)
{
    <h1>Hire a new Doctor</h1>
}
else
{
    <h1>Edit doctor information: @Model.Doctor.FirstName</h1>
}

<div class="container">
    <form method="post">
        <input type="hidden" asp-for="Doctor.Id" />
        <div class="form-row">
            <div class="form-group col-sm-6">
                <label asp-for="Doctor.FirstName"></label>
                <input class="form-control" asp-for="Doctor.FirstName" />
                <span class="text-danger" asp-validation-for="Doctor.FirstName"></span>
            </div>
            <div class="form-group col-sm-6">
                <label asp-for="Doctor.LastName"></label>
                <input class="form-control" asp-for="Doctor.LastName" />
                <span class="text-danger" asp-validation-for="Doctor.LastName"></span>
            </div>
            <div class="form-group col-sm-6">
                <label asp-for="Doctor.Age"></label>
                <input class="form-control" asp-for="Doctor.Age" />
                <span class="text-danger" asp-validation-for="Doctor.Age"></span>
            </div>

            <div class="form-group col-sm-6">
                <label asp-for="Doctor.Gender"></label>
                <select class="form-control" asp-for="Doctor.Gender" asp-items="@Model.Gender">
                    <option value="">select gender</option>
                </select>
                <span class="text-danger" asp-validation-for="Doctor.Gender"></span>
            </div>
            <div class="form-group col-sm-6">
                <label asp-for="Doctor.City"></label>
                <input class="form-control" asp-for="Doctor.City" />
                <span class="text-danger" asp-validation-for="Doctor.City"></span>
            </div>
            <div class="form-group col-sm-6">
                <label asp-for="Doctor.ClinicId"></label>
                <select class="form-control" asp-for="Doctor.ClinicId" asp-items="@Model.Clinics">
                    <option value="">select appointment</option>
                </select>
            </div>
        </div>

        <button type="submit" class="btn btn-success">Save</button>
        <a asp-page="./List" class="btn btn-primary">Back</a>
    </form>
</div>