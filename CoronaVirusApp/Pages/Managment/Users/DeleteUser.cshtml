@page "{id:int?}"
@model CoronaVirusApp.Pages.Managment.Users.DeleteUserModel
@{
    ViewBag.Title = "Delete User";
}

<h2>Deleting User: @Model.ApplicationUser.UserName</h2>
<br />
<div class="container">
    <div class="alert alert-dark">
        Are you sure you want to delete @Model.ApplicationUser.FirstName @Model.ApplicationUser.LastName?
    </div>
    <form method="post">
        <div class="form-group">
            <button type="submit" class="btn btn-danger">Yes!</button>
            <a asp-page="./Index" class="btn btn-outline-dark">Cancel</a>
        </div>
    </form>
</div>