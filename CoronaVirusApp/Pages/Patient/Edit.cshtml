@page "{id:int?}"
@model CoronaVirusApp.Pages.Patient.EditModel
@{
    ViewData["Title"] = "Edit";
}

@if (Model.Patient.Id == 0)
{
    <h1>Add new patient</h1>
}
else
{
    <h1>Edit patient: @Model.Patient.FirstName @Model.Patient.LastName</h1>
}

<form method="post">
    <input type="hidden" asp-for="Patient.Id" />
    <div class="form-row">
        <div class="form-group col-sm-4">
            <label asp-for="Patient.FirstName"></label>
            <input class="form-control" asp-for="Patient.FirstName" />
            <span class="text-danger" asp-validation-for="Patient.FirstName"></span>
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="Patient.LastName"></label>
            <input class="form-control" asp-for="Patient.LastName" />
            <span class="text-danger" asp-validation-for="Patient.LastName"></span>
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="Patient.Age"></label>
            <input class="form-control" asp-for="Patient.Age" />
            <span class="text-danger" asp-validation-for="Patient.Age"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-sm-6">
            <label asp-for="Patient.City"></label>
            <input class="form-control" asp-for="Patient.City" />
            <span class="text-danger" asp-validation-for="Patient.City"></span>
        </div>
        <div class="form-group col-sm-6">
            <label asp-for="Patient.Gender"></label>
            <select class="form-control" asp-for="Patient.Gender" asp-items="@Model.Gender">
                <option value="">select gender</option>
            </select>
            <span class="text-danger" asp-validation-for="Patient.Gender"></span>
        </div>        
    </div>
    <div class="form-row">
        <div class="form-group col-sm-6">
            <label asp-for="Patient.DoctorId"></label>
            <select class="form-control" asp-for="Patient.DoctorId" asp-items="@Model.Doctors">
                <option value="">select doctor</option>
            </select>            
        </div>                
    </div>    
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-page="./List" class="btn btn-primary">Back</a>
</form>
