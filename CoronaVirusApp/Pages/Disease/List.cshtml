@page
@model CoronaVirusApp.Pages.Disease.ListModel
@{
    ViewData["Title"] = "List";
}

<h1>Diseases</h1>
<div>    
    @if (!string.IsNullOrEmpty(Model.TempMessage))
    {
        <div class="alert alert-warning">@Model.TempMessage</div>
    }
    <div class="table-responsive">
        <table class="table table-bordered table-primary table-sm">
            <thead class="thead-light">
                <tr>
                    <th>Name</th>
                    <th>Disease Type</th>                    
                    <th>DeathRate</th>                                        
                    <th></th>
                </tr>
            </thead>
            @foreach (var disease in Model.Diseases)
            {
                <tr>
                    <td>@disease.Name</td>
                    <td>@disease.DiseaseType</td>                    
                    <td>@disease.DeathRate %</td>                    
                    <td>
                        <a class="btn btn-outline-secondary" asp-page="./Edit" asp-route-id="@disease.Id">
                            <i class="fas fa-edit"></i>
                        </a>                        
                        <a class="btn btn-outline-secondary" asp-page="./Delete" asp-route-id="@disease.Id">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
            <tfoot style="visibility:@(!Model.Diseases.Any() ? "visible" : "hidden")">
                <tr>
                    <td colspan="3">
                        No diseases!
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
<div class="form-group">
    <a class="btn btn-primary" asp-page="./Edit">Add Disease!</a>
</div>